<local:BaseWindowWPF x:Class="TFrame.BeamDimUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TFrame"
             mc:Ignorable="d" 
             Title="Create Beam Dimensions" Height="150" Width="300" ResizeMode="NoResize" FontSize="12">
    <StackPanel>
        <ComboBox x:Name="dimStyleComboBox" DisplayMemberPath="Name" SelectedIndex="0" SelectedItem="{Binding DimensionType}" Height="Auto" Margin="20"/>
        <Grid Margin="17, 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="OKBtn" Grid.Column="2" Content="OK" Margin="0, 10" Width="60" Click="OKBtn_Click"/>
            <Button x:Name="CancelBtn" Grid.Column="3" Content="Cancel" Margin="0, 10" Width="60" Click="CancelBtn_Click"/>
        </Grid>
    </StackPanel>
</local:BaseWindowWPF>
